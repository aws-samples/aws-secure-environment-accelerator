  "devDependencies": {
    "@types/adm-zip": "0.4.34",
    "@types/node": "18.11.9",
    "@types/jest": "25.2.3",
    "esbuild": "0.11.18",
    "eslint": "7.25.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "ts-node": "9.1.1",
