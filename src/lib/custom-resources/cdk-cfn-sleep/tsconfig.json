{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "noImplicitAny": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["cdk/**/*"]
}
